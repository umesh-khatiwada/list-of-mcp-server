{
  "mcpServers": {
    "kubernetes": {
      "command": "python",
      "args": [
        "-m",
        "kubectl_mcp_tool.mcp_server"
      ],
      "env": {
        "KUBECONFIG": "/path/to/your/.kube/config",
        "PATH": "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/homebrew/bin",
        "PYTHONPATH": "/path/to/kubectl-mcp-server",
        "MCP_TEST_MOCK_MODE": "0",
        "MCP_DEBUG": "1",
        "KUBECTL_MCP_LOG_LEVEL": "DEBUG",
        "PYTHONIOENCODING": "utf-8",
        "PYTHONUNBUFFERED": "1",
        "MCP_LOG_FILE": "/path/to/kubectl-mcp-server/logs/debug.log",
        "NATURAL_LANGUAGE_DEBUG": "1"
      },
      "disabled": false
    }
  }
}